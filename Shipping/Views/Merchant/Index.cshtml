@inject IAuthorizationService AuthorizationService
@model List<MerchantViewModel>
@{
    ViewData["Title"] = "Merchants";
}

<h3 class="display-4">التجار</h3>


<p>
    @if (AuthorizationService.AuthorizeAsync(User, Permissions.Merchants.Create).Result.Succeeded)
    {
        <a asp-action="Add" class="btn btn-primary mt-2">إضافة تاجر جديد</a>
    }
</p>
<div class=" form-group rounded">
    <div class="row ">

        <div class="col-2">
            <form method="get" action="/Merchant/Index">
                <div>
                    <label>بحث</label>
                    <input type="text" name="Name" id="Name" class="form form-control" />
                    <input type="submit" value="بحث" class="btn btn-primary  m-1" />
                </div>

            </form>
        </div>
    </div>
    <table class="table table-hover table-bordered text-center my-4">
        <tr style="background-color:#ddd;">
            <th>الاسم</th>
            <th>البريد الالكتروني</th>
            <th>رقم الهاتف</th>
            <th>الفرع</th>
            <th>الصلاحية</th>
            <th>الحاله</th>
            <th>الاعدادات</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.Phone</td>
                <td>@item.BranchName</td>
                <td>@item.Role</td>
                <td class="form-switch">
                    @if (AuthorizationService.AuthorizeAsync(User, Permissions.Merchants.Delete).Result.Succeeded)
                    {
                        <input style="margin-left: 0;" class="form-check-input" type="checkbox" 
                            asp-for="@item.Status" data-id="@item.MerchantId" onchange="changeState(this)" checked="@item.Status">
                    }
                </td>
                <td>
                    @if (AuthorizationService.AuthorizeAsync(User, Permissions.Merchants.Edit).Result.Succeeded)
                    {
                        <a asp-action="Edit" asp-route-id="@item.MerchantId" class="btn btn-info">Edit</a>
                    }
                </td>
            </tr>
        }
    </table>
</div>



@section Scripts {
    <script>
        function changeState(checkbox) {
            var id = $(checkbox).data('id');
            var status = checkbox.checked;
            $.ajax({
                url: '@Url.Action("ChangeState", "Merchant")',
                type: 'POST',
                data: { id: id, status: status },
                success: function () {
                    console.log('State changed successfully!');
                },
                error: function () {
                    console.log('Failed to change state!');
                }
            });
        }
    </script>
}