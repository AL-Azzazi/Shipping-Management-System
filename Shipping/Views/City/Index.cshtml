@model List<City>
@{
    ViewData["Title"] = "Index";
}


<div class="my-4 bg-light py-2 rounded">
    <div class="row container d-flex">
        <h1>المدن</h1>
    </div>
</div>
<div class="my-4 bg-light p-2 px-4 rounded">
    <div class="row ">
        <div class="col-6"></div>
        <div class="col-4"></div>
        <div class="col-2">
            <form method="get" action="/Merchant/Index">
                <div>
                    <label>بحث</label>
                    <input type="text" name="Name" id="Name" class="form form-control" />
                    <input type="submit" value="بحث" class="btn btn-primary add m-1" />
                </div>

            </form>
        </div>
    </div>
    <table class="table table-hover table-bordered text-center my-4">
        <tr style="background-color:#ddd;">
            <th>
                الاسم
            </th>
            <th>
                الحاله
            </th>
            <th>
                الاعدادات
            </th>


        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td class="form-switch">
                    <input class="form-check-input" type="checkbox" asp-for="@item.Status" data-id="@item.Id" onchange="changeState(this)" checked="@item.Status">
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">Edit</a>
                </td>
            </tr>
        }
    </table>
</div>