@model MerchantViewModel

@{
    ViewData["Title"] = "Edit";
}






<form asp-controller="Merchant" asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input type="text" class="form-control" asp-for="Name">
    </div>
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input type="email" class="form-control" asp-for="Email">
    </div>
    <div class="form-group">
        <label asp-for="Phone">Phone</label>
        <input asp-for="Phone" type="text" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="BranchId">Branch Name</label>
        <select asp-for="BranchId" class="form-control role-select">
            @foreach (var branch in ViewBag.Branchs)
            {
                <option value="@branch.Id">@branch.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="Password">Password</label>
        <input type="password" class="form-control" id="Password" name="Password">
    </div>
    <div class="form-group">
        <label asp-for="Address">Address</label>
        <input type="text" class="form-control" asp-for="Address">
    </div>
    <div class="form-group">
        <label asp-for="City">City</label>
        <input type="text" class="form-control" asp-for="City">
    </div>
    <div class="form-group">
        <label asp-for="Government">Government</label>
        <input type="text" class="form-control" asp-for="Government">
    </div>
    <div class="form-group">
        <label asp-for="PickUpPrice">Pick Up Price</label>
        <input type="number" class="form-control" asp-for="PickUpPrice">
    </div>
    <div class="form-group">
        <label asp-for="RefuseCostPercent">Refuse Cost Percent</label>
        <input type="number" class="form-control" asp-for="RefuseCostPercent">
    </div>

    <button type="submit" class="btn btn-primary">Create Merchant</button>
</form>


@section scripts{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}