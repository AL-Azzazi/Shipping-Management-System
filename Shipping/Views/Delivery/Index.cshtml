@model IEnumerable<Shipping.ViewModels.DeliveryViewModel>

@{
    ViewData["Title"] = "Index";
}


<p>
    <a asp-action="add" class="btn btn-primary">Create New</a>
</p>
<form method="get" action="/Delivery/Index">
    <div>
        <label>Search</label>
        <input type="text" name="Name" id="Name" class="form form-control" />
        <input type="submit" value="Search" class="btn btn-primary" />
    </div>
</form>

<table class="table table-hover table-bordered text-center">
    <tr>
        <th>

        </th>
        <th>
            الحاله
        </th>
        <th>
            البريد الالكتروني
        </th>
        <th>
            الفرع
        </th>
        <th>
            رقم الهاتف
        </th>
        <th>
            الاسم
        </th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@item.DeliveryId" class="btn btn-alert">Edit</a>
            </td>
            <td class="form-switch">
               @*<input class="form-check-input" type="checkbox" asp-for="@item.status" data-id="@item.DeliveryId" onchange="changeState()" checked="@item.status? true : false">*@
                <input class="form-check-input" type="checkbox" asp-for="@item.status" data-id="@item.DeliveryId" onchange="changeState(this)" checked="@item.status">
            </td>
            <td>
                @item.Email
            </td>
            <td>
                @item.BranchId
            </td>
            <td>
                @item.Phone
            </td>
            <td>
                @item.Name
            </td>
        </tr>
    }
</table>


@section Scripts {
    <script>
        function changeState(checkbox) {
            var id = $(checkbox).data('id');
            var status = checkbox.checked;
            $.ajax({
                url: '@Url.Action("ChangeState", "Delivery")',
                type: 'POST',
                data: { id: id, status: status },
                success: function () {
                    console.log('State changed successfully!');
                },
                error: function () {
                    console.log('Failed to change state!');
                }
            });
        }
    </script>
}