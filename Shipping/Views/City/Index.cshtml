@model List<City>
@{
    ViewData["Title"] = "Index";
}


<div class=" py-2 rounded">
    <div class="row container d-flex">
        <h3 class="display-4">المدن</h3>
    </div>
</div>
<div class=" p-2 px-4 rounded">
    <div class="row ">
        
        <div class="col-2">
            @using (Html.BeginForm("Search", "City", FormMethod.Get))
            {
                @foreach (var item in Model)
                {
                    int stateId = item.StateId;
                    @Html.Hidden("id", stateId)

                }

                <input type="text" name="query" />
                <input type="submit" class="btn btn-primary" value="بحث" />
            }
        </div>
    </div>
    <table class="table table-hover table-bordered text-center my-4">
        <tr style="background-color:#ddd;">
            <th>
                الاسم
            </th>
            <th>
                الحاله
            </th>
            <th>
                الاعدادات
            </th>


        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td class="form-switch">
                    <input class="form-check-input" type="checkbox" asp-for="@item.Status" data-id="@item.Id" onchange="changeState(this)" checked="@item.Status">
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">تعديل</a>
                </td>
            </tr>
        }
    </table>
</div>
@section Scripts {
    <script>
        function changeState(checkbox) {
            var id = $(checkbox).data('id');
            var status = checkbox.checked;
            $.ajax({
                url: '@Url.Action("ChangeState", "City")',
                type: 'POST',
                data: { id: id, status: status },
                success: function () {
                    console.log('State changed successfully!');
                },
                error: function () {
                    console.log('Failed to change state!');
                }
            });
        }


    </script>
}