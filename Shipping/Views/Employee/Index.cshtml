@inject IAuthorizationService AuthorizationService
@model IEnumerable<EmployeeViewModel>

@{
    ViewData["Title"] = "Index";
}
<h3 class="display-4">الموظفين</h3>

<p>
    @if (AuthorizationService.AuthorizeAsync(User, Permissions.Employees.Create).Result.Succeeded)
    {
        <a asp-action="Add" class="btn btn-primary mt-2">إضافة موظف جديد</a>
    }
</p>
@using (Html.BeginForm("Search", "Employee", FormMethod.Get))
{
    <div class="form-group col-2  rounded">
        <label for="searchTerm">بحث</label>
        <input type="text" name="searchTerm" class="form-control" value="@ViewBag.SearchTerm" />
    </div>

    <button type="submit" class="btn btn-primary mt-1">بحث</button>
}


<table class="table table-hover table-bordered text-center my-4">
    <tr style="background-color:#ddd;">
        <th>الإسم   </th>
        <th>البريد الإلكتروني</th>
        <th>رقم الهاتف</th>
        <th>الفرع</th>
        <th>الحالة</th>
        <th>الصلاحيات</th>
        <th>الإعدادت</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            
            <td>@item.Name</td>
            <td>@item.Email</td>
            <td>@item.Phone</td>
            <td>@item.BranchName</td>
            <td class="form-switch">
                @if (AuthorizationService.AuthorizeAsync(User, Permissions.Employees.Delete).Result.Succeeded)
                {
                    <input style="margin-left: 0;" class="form-check-input" type="checkbox" 
                            asp-for="@item.Status" data-id="@item.Id" onchange="changeState(this)" checked="@item.Status">
                }
            </td>
            <td>@item.Role</td>
            <td>
                @if (AuthorizationService.AuthorizeAsync(User, Permissions.Employees.Edit).Result.Succeeded)
                {
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Edit</a>
                }
            </td>
        </tr>
    }
</table>


                

@section Scripts {
    <script>
        function changeState(checkbox) {
            var id = $(checkbox).data('id');
            var status = checkbox.checked;
            $.ajax({
                url: '@Url.Action("ChangeState", "Employee")',
                type: 'POST',
                data: { id: id, status: status },
                success: function () {
                    console.log('State changed successfully!');
                },
                error: function () {
                    console.log('Failed to change state!');
                }
            });
        }
    </script>
}