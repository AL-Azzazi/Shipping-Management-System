@model ChangePasswordViewModel 
@{
    ViewData["Title"] = "Change Password";

}


<div class="row">
    <div class="col-md-12">
        <h3 class="display-4">تغيير الرقم السري</h3>
        <hr />
        <form asp-controller="Account" asp-action="ChangePassword" method="post">

            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group mb-2">
                <label class="form-label">الرقم السري الحالى</label>
                <input asp-for="OldPassword" class="form-control" />
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label class="form-label">الرقم السري الجديد</label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label class="form-label">تاكيد الرقم السري</label>
                <input asp-for="ConfirmNewPassword" class="form-control" />
                <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
            </div>
           
            <button type="submit" class="btn btn-primary mb-1">تغيير</button>
            <a asp-controller="Home" asp-action="Index" class="btn btn-light">إلغاء</a>
        </form>
        

    </div>
</div>

